@model HubbleSpace_Final.Entities.EmailSubscription

@{
    ViewData["Title"] = "Edit - EmailSubscription";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Cập nhật thông tin Email Subscription
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" class="form-horizontal" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID_EmailSubscription" />

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Email" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Email" class="form-control"/>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="subscribed_Status" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="subscribed_Status" class="form-control">
                            <option value="Subscribed">Subscribed</option>
                            <option value="Unscribed">Unscribed</option>
                        </select>
                        <span asp-validation-for="subscribed_Status" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group card-footer">
                    <input type="submit" value="Save" class="btn btn-primary col-2" />
                    <input type="reset" value="Reset" class="btn btn-danger col-2" />
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>