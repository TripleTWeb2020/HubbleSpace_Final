@model IEnumerable<HubbleSpace_Final.Entities.Banner>

@{
    ViewData["Title"] = "Home Page";
    Layout = "_FrontendLayout";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div id="main-slider" class="owl-carousel owl-theme">
                @foreach (var item in Model)
                {
                    <div class="item">
                        <img style="height:960px" src="~/Images/Banner/@Html.DisplayFor(modelItem => item.Photo)" class="img-fluid owl-height">
                    </div>
                }
            </div>
            <!-- /#main-slider-->
        </div>
    </div>
</div>
