@section ajax{
    <script>
        $(function () {
            $(document).ready(function () {
                $.ajax({
                    url: "Home/GetBanners",
                    success: function (response) {
                        $("#banner").html(response);
                        $(".owl-carousel").owlCarousel({
                            autoplay: true,
                            navigation: true,
                            loop: true,
                            items: 1,
                            autoHeight: true,
                        });
                    }
                });
                $.ajax({
                    url: "Home/GetNewProducts",
                    success: function (response) {
                        $("#hot").html(response);
                        $(".owl-carousel").owlCarousel({
                            center: true,
                            loop: true,
                            autoplay: true,
                            margin: 15,
                            items: 1,
                            responsive: {
                                600: {
                                    items: 2
                                },
                                900: {
                                    items: 3
                                },
                                1200: {
                                    items: 4
                                }
                            }

                        });
                    }
                });
                $.ajax({
                    url: "Home/GetBestSale",
                    success: function (response) {
                        $("#bestsale").html(response);
                        $(".owl-carousel").owlCarousel({
                            center: true,
                            loop: true,
                            autoplay: true,
                            margin: 15,
                            items: 1,
                            responsive: {
                                600: {
                                    items: 2
                                },
                                900: {
                                    items: 3
                                },
                                1200: {
                                    items: 4
                                }
                            }
                        });
                    }
                });

            });

        });
    </script>
}
