@model PagedList.Core.IPagedList<HubbleSpace_Final.Entities.Color_Product>

@{
    ViewData["Title"] = ViewData["Object"] +" - "+ ViewData["name"];
    Layout = "_FrontendLayout";
}
<!-- Your Plugin chat code -->
