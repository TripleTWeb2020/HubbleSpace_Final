<div class="container" style="min-height: 400px;">
    <div class="row">
        <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/../Home">Home</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Checkout</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-12">
            <div class="box">
                @if (_signInManager.IsSignedIn(User))
                {
                    <form asp-action="Checkout">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="CheckoutModel.FirstName" class="control-label"></label>
                            <input required asp-for="CheckoutModel.FirstName" value="@User.FindFirst("UserFirstName").Value" class="form-control" />
                            <span asp-validation-for="CheckoutModel.FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckoutModel.LastName" class="control-label"></label>
                            <input asp-for="CheckoutModel.LastName" value="@User.FindFirst("UserLastName").Value" class="form-control" />
                            <span asp-validation-for="CheckoutModel.LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckoutModel.Email" class="control-label"></label>
                            <input required asp-for="CheckoutModel.Email" value="@User.FindFirst("UserEmail").Value" class="form-control" />
                            <span asp-validation-for="CheckoutModel.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckoutModel.Address" class="control-label"></label>
                            <input required asp-for="CheckoutModel.Address" value="@User.FindFirst("UserAddress").Value" class="form-control" />
                            <span asp-validation-for="CheckoutModel.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="CheckoutModel.Phone" class="control-label"></label>
                            <input required asp-for="CheckoutModel.Phone" value="@User.FindFirst("UserPhoneNumber").Value" class="form-control" />
                            <span asp-validation-for="CheckoutModel.Phone" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a asp-action="Cart" class="btn btn-dark">Back to cart</a>
                            <input type="reset" value="Reset" class="btn btn-danger" />
                            <input type="submit" value="Save" class="btn btn-success" />
                        </div>
                    </form>
                }
                else
                {
            <form asp-action="Checkout">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="CheckoutModel.FirstName" class="control-label"></label>
                    <input required asp-for="CheckoutModel.FirstName" class="form-control" />
                    <span asp-validation-for="CheckoutModel.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckoutModel.LastName" class="control-label"></label>
                    <input asp-for="CheckoutModel.LastName" class="form-control" />
                    <span asp-validation-for="CheckoutModel.LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckoutModel.Email" class="control-label"></label>
                    <input required asp-for="CheckoutModel.Email" class="form-control" />
                    <span asp-validation-for="CheckoutModel.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckoutModel.Address" class="control-label"></label>
                    <input required asp-for="CheckoutModel.Address" class="form-control" />
                    <span asp-validation-for="CheckoutModel.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CheckoutModel.Phone" class="control-label"></label>
                    <input required asp-for="CheckoutModel.Phone" class="form-control" />
                    <span asp-validation-for="CheckoutModel.Phone" class="text-danger"></span>
                </div>
                <div class="form-group d-flex justify-content-between flex-lg-row">
                    <div class="left">
                        <a asp-action="Cart" class="btn btn-outline-dark"><i class="fa fa-chevron-left"></i> Back to cart</a>
                        <input type="reset" value="Reset" class="btn btn-danger" />
                    </div>
                    <div class="right">
                        <input type="submit" value="Choose your payment method" class="btn btn-primary" />
                    </div>
                </div>
            </form>
                }
            </div>
        </div>
    </div>
</div>
