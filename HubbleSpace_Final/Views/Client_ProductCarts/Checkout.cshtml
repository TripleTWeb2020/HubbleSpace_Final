@model HubbleSpace_Final.Models.CheckOutViewModel
@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> _signInManager
@inject Microsoft.AspNetCore.Identity.UserManager<ApplicationUser> _userManager

@{
    Layout = "_FrontendLayout";
}
<div class="row">
    <div class="col-lg-12">
        <!-- breadcrumb-->
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li aria-current="page" class="breadcrumb-item active">Checkout - Address</li>
            </ol>
        </nav>
    </div>
    
    @if (_signInManager.IsSignedIn(User)) {
    <div class="col-md-4">
        <form asp-action="Checkout">
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CheckoutModel.FirstName" class="control-label"></label>
                <input asp-for="CheckoutModel.FirstName" value="@User.FindFirst("UserFirstName").Value" class="form-control" />
                <span asp-validation-for="CheckoutModel.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutModel.LastName" class="control-label"></label>
                <input asp-for="CheckoutModel.LastName" value="@User.FindFirst("UserLastName").Value"class="form-control" />
                <span asp-validation-for="CheckoutModel.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutModel.Email" class="control-label"></label>
                <input asp-for="CheckoutModel.Email" value="@User.FindFirst("UserEmail").Value"class="form-control" />
                <span asp-validation-for="CheckoutModel.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutModel.Address" class="control-label"></label>
                <input asp-for="CheckoutModel.Address" value ="@User.FindFirst("UserAddress").Value" class="form-control" />
                <span asp-validation-for="CheckoutModel.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckoutModel.Phone" class="control-label"></label>
                <input asp-for="CheckoutModel.Phone" value ="@User.FindFirst("UserPhoneNumber").Value" class="form-control" />
                <span asp-validation-for="CheckoutModel.Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
}

</div>
