
@{
	ViewData["Title"] = "Payment Page";
	Layout = "_FrontendLayout";
}

<div id="all">
	<div id="content">
		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<!-- breadcrumb-->
					<nav aria-label="breadcrumb">
						<ol class="breadcrumb">
							<li class="breadcrumb-item"><a href="../Home">Home</a></li>
							<li aria-current="page" class="breadcrumb-item active">Shopping cart</li>
						</ol>
					</nav>
				</div>

			</div>
			<div id="checkout" class="col-lg-9">
				<div class="box">
					<h1>Checkout - Payment method</h1>
					<div class="content py-3">
						<div class="row">
							<div class="col-md-6">
								<div class="box payment-method">
									<h4>Paypal</h4>
									<p>We like it all.</p>
									<form asp-action="PaypalCheckout">
										<div class="box-footer text-center">
											<button class="btn btn-primary">Paypal Checkout</button>
											<a asp-action="PaypalCheckout">
											</a>
										</div>
									</form>
								</div>
							</div>
							<div class="col-md-6">
								<div class="box payment-method">
									<h4>Cash on delivery</h4>
									<p>You pay when you get it.</p>
									<form asp-action="Checkout" method="get">
										<div class="box-footer text-center">
											<button class="btn btn-primary">COD method</button>
											<a asp-action="Checkout">
											</a>
										</div>
									</form>
								</div>
								</div>
							</div>
							<!-- /.row-->
						</div>
						<!-- /.content-->
						<div class="box-footer d-flex justify-content-between">
							<a asp-controller="Client_ProductCarts" asp-action="Cart" class="btn btn-outline-secondary"><i class="fa fa-chevron-left"></i>Back to your cart info</a>
							<button type="submit" class="btn btn-primary">Continue to Setup your payment<i class="fa fa-chevron-right"></i></button>
						</div>

					<!-- /.box-->
				</div>
			</div>
		</div>
	</div>
</div>