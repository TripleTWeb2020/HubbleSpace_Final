@model IEnumerable<HubbleSpace_Final.Entities.Discount>

@{
    ViewData["Title"] = "Discount - Manage";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý khuyến mãi</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                    <div class="rs-select2--light rs-select2--sm">
                        <select class="js-select2" id="typeofsort">
                            <option selected="selected"> </option>
                            <option value="0">A-Z</option>
                            <option value="1">Z-A</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <button id="Sort" class="au-btn-filter">
                        <i class="zmdi zmdi-filter-list"></i>Sort
                    </button>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Code_Discount)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Expire)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.Value)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.NumberofTurns)
                        </th>
                        <th class="col-2"></th>
                    </tr>
                </thead>
                <tbody id="tbody">
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.Code_Discount)
                            </td>
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.Expire)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.Value)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.NumberofTurns)
                            </td>
                            <td class="col-2">
                                <div class="table-data-feature">
                                    <a class="item" asp-action="Edit" asp-route-id="@item.ID_Discount" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.ID_Discount" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.ID_Discount" data-toggle="tooltip" data-placement="top" title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>
@section ajax{
    <script>
        $(function () {
            $("#Sort").click(function () {
                $.ajax({
                    url: "/Discounts/Index",
                    data: {
                        "id": $("#typeofsort").val(),
                    },
                    dataType: html,
                    success: function (response) {
                        $("#discount").html(response);
                        
                    }
                });
            });
        });
    </script>
}