@model HubbleSpace_Final.Models.ResetPasswordModel

@{
    Layout = "_FrontendLayout";
    ViewData["Title"] = "ResetPassword";
}
<!-- Load Facebook SDK for JavaScript -->
<div id="fb-root"></div>
<!-- Your Plugin chat code -->
<div id="fb-customer-chat" class="fb-customerchat">
</div>
<script>
    var chatbox = document.getElementById('fb-customer-chat');
    chatbox.setAttribute("page_id", "109024788097939");
    chatbox.setAttribute("attribution", "biz_inbox");
    window.fbAsyncInit = function () {
        FB.init({
            xfbml: true,
            version: 'v11.0'
        });
    };

    var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
    (function () {
        var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
        s1.async = true;
        s1.src = 'https://embed.tawk.to/60e4344ad6e7610a49a9da98/1f9tmohmc';
        s1.charset = 'UTF-8';
        s1.setAttribute('crossorigin', '*');
        s0.parentNode.insertBefore(s1, s0);
    })();

    (function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v3.0";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
</script>
<div class="container" style="min-height: 400px">
    <div class="row">
        <div class="col-lg-12">
            <!-- breadcrumb-->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="~/../Home">Home</a></li>
                    <li aria-current="page" class="breadcrumb-item active">Reset Password</li>
                </ol>
            </nav>
        </div>
        <div class="col-lg-12">
            <div class="box">
                <div class="col-md-12 offset-12">
                    @if (Model?.IsSuccess == true)
                    {
                        <div class="alert alert-success" role="alert">
                            <p>
                                You have updated your password successfully.
                            </p>
                            <a asp-controller="Client_Accounts" asp-action="Signin" class="btn btn-outline-secondary">Sign in</a>
                        </div>
                    }
                    else
                    {
                        <form asp-action="ResetPassword">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" class="form-control" />
                            <input type="hidden" asp-for="Token" class="form-control" />
                            <div class="form-group">
                                <label asp-for="NewPassword" class="control-label"></label>
                                <input asp-for="NewPassword" class="form-control" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                                <input asp-for="ConfirmNewPassword" class="form-control" />
                                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Reset password" class="btn btn-primary" />
                                <a asp-controller="Client_Accounts" asp-action="Signin" class="btn btn-outline-secondary">Back to Sign in</a>
                            </div>
                        </form>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
