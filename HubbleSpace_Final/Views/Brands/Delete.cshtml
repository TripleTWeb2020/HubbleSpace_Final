@model HubbleSpace_Final.Entities.Brand

@{
    ViewData["Title"] = "Delete - Brand";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Xóa Banner <br>
            Bạn chắc chắn muốn xóa thương hiệu này?
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID_Brand" />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Brand_Name" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Brand_Name" class="form-control disabled" />
                    </div>
                </div>

                <div class="form-group card-footer">
                    <a asp-action="Delete" class="btn btn-danger col-2" asp-route-id="@Model.ID_Brand">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>