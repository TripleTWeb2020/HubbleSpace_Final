@model PagedList.Core.IPagedList<HubbleSpace_Final.Entities.Order>

@{
    ViewData["Title"] = "Order - Manage";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý đơn hàng</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="post">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="search" value="@ViewData["Search"]" />
                    </div>
                    <button class="au-btn-filter" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>

            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.First().TotalMoney)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.First().Discount)
                        </th>
                        <th class="col-2">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["Date"]">@Html.DisplayNameFor(model => model.First().Date_Create)</a>
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.First().Address)
                        </th>
                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.First().SDT)
                        </th>
                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.First().PaymentStatus)
                        </th>
                        <th class="col-1">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["Process"]">@Html.DisplayNameFor(model => model.First().Process)</a>
                        </th>
                        <th class="col-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-1">
                                @item.TotalMoney.ToString("n0")
                            </td>
                            <td class="col-1">
                                @item.Discount.ToString("n0")
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.Date_Create)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.Address)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.SDT)
                            </td>
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.PaymentStatus)
                            </td>
                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Process)
                            </td>
                            <td class="col-2">
                                <div class="table-data-feature">
                                    <a class="item" asp-action="Edit" asp-route-id="@item.ID_Order" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.ID_Order" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.ID_Order " data-toggle="tooltip" data-placement="top" title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="Orders" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>