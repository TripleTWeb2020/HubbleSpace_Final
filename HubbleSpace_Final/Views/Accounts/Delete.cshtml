@model HubbleSpace_Final.Entities.Account

@{
    ViewData["Title"] = "Delete - Account";
    Layout = "_AdminLayout";

}


<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Xóa Banner <br>
            Bạn chắc chắn muốn xóa người dùng này?
        </div>
        <div class="card-body card-block">
            <form asp-action="Edit" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID_Account" />
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="UserName" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="UserName" class="form-control disabled" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Password" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Password" class="form-control disabled" type="password" />
                    </div>
                </div>
                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Email" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Email" class="form-control disabled" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Level" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Level" class="form-control disabled" type="radio"/>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Date_Create" class="control-label"></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Date_Create" class="form-control disabled" />
                    </div>
                </div>

                <div class="form-group card-footer">
                    <a asp-action="Delete" class="btn btn-danger col-2" asp-route-id="@Model.ID_Account">Delete</a>
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>