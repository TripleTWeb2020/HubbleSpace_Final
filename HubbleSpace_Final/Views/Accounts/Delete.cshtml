@model ApplicationUser

@{
    ViewData["Title"] = "Delete User";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Xóa người dùng <br>
            Bạn chắc chắn muốn xóa người dùng này?
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="@Model.Id" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.UserName)
                </div>
                <div class="col-12 col-md-9">
                    @Model.UserName
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Email)
                </div>
                <div class="col-12 col-md-9">
                    @Model.Email
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </div>
                <div class="col-12 col-md-9">
                    @Model.PhoneNumber
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    Fullname
                </div>
                <div class="col-12 col-md-3">
                    @Model.FirstName @Model.LastName
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.CreditCard)
                </div>
                <div class="col-12 col-md-9">
                    @Model.CreditCard
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Address)
                </div>
                <div class="col-12 col-md-9">
                    @Model.Address
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </div>
                <div class="col-12 col-md-9">
                    @Model.DateOfBirth
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    Role
                </div>
                <div class="col-12 col-md-9">
                    @if (Model.level == 0)
                    {@Html.Raw("Member") }
                else
                { @Html.Raw("Admin")}
                </div>
            </div>

            <form asp-action="Delete">
                <div class="form-group card-footer">
                    <input type="hidden" asp-for="@Model.Id" />
                    <input type="submit" value="Delete" class="btn btn-danger col-2" />
                    <a asp-action="Index" asp-route-id="@Model.Id" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
