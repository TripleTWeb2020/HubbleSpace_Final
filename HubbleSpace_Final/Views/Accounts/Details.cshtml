@model ApplicationUser

@{
    ViewData["Title"] = "Details - Account";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thông tin người dùng
        </div>
        <div class="card-body card-block">
            <input type="hidden" asp-for="Id" />
            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.UserName)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.UserName)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Email)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Email)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.PhoneNumber)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.FirstName)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.FirstName)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.LastName)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.LastName)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.CreditCard)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.CreditCard)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.Address)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.Address)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    @Html.DisplayNameFor(model => model.DateOfBirth)
                </div>
                <div class="col-12 col-md-9">
                    @Html.DisplayFor(model => model.DateOfBirth)
                </div>
            </div>

            <div class="row form-group">
                <div class="col col-md-3">
                    Role
                </div>
                <div class="col-12 col-md-9">
                    @if(Model.level == 0) { @Html.Raw("Member"); }
                    else { @Html.Raw("Admin"); }
                </div>
            </div>

            <div class="form-group card-footer">
                <a asp-action="Edit" class="btn btn-danger col-2" asp-route-id="@Model.Id">Edit</a>
                <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
            </div>
        </div>
    </div>
</div>
