@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "All Users";
    Layout = "_AdminLayout";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a asp-action="Signup" asp-controller="Client_Accounts"
       class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>

    foreach (var user in Model)
    {
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">@user.UserName</h5>
                <h5 class="card-title">@user.Email</h5>
                <h5 class="card-title">@user.PhoneNumber</h5>
                <h5 class="card-title">@user.FirstName</h5>
                <h5 class="card-title">@user.LastName</h5>
                <h5 class="card-title">@user.DateOfBirth</h5>
                <h5 class="card-title">@user.CreditCard</h5>
                <h5 class="card-title">@user.Address</h5>
            </div>
            <div class="card-footer">
                <a asp-action="EditUser" asp-controller="Accounts"  asp-route-id="@user.Id" class="btn btn-danger">Edit</a>
                <a asp-action="DeleteUser" asp-controller="Accounts" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button below to create a user
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="Client_Accounts" asp-action="Signup">
                Add new user
            </a>
        </div>
    </div>
}