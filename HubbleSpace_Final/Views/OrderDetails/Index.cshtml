@model PagedList.Core.IPagedList<HubbleSpace_Final.Entities.OrderDetail>

@{
    ViewData["Title"] = "OrderDetail - Manage";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý chi tiết đơn hàng</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="post">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="search" value="@ViewData["Search"]" />
                    </div>
                    <button class="au-btn-filter" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--blue au-btn--small" asp-controller="Orders" asp-action="Index">
                    Back
                </a>
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create" asp-route-id="@ViewBag.ID_Order">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-2">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["Name"]">@Html.DisplayNameFor(model => model.First().Color_Product.product.Product_Name)</a>
                        </th>

                        <th class="col-2">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["ColorName"]">@Html.DisplayNameFor(model => model.First().Color_Product.Color_Name)</a>
                        </th>

                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.First().Color_Product.Image)
                        </th>

                        <th class="col-1">
                            @Html.DisplayNameFor(model => model.First().Size)
                        </th>

                        <th class="col-1">
                            <a asp-action="Index" asp-route-sortOrder="@ViewData["Quantity"]">@Html.DisplayNameFor(model => model.First().Quantity)</a>
                        </th>

                        <th class="col-2">
                            @Html.DisplayNameFor(model => model.First().Price_Sale)
                        </th>

                        <th class="col-2"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.Color_Product.product.Product_Name)
                            </td>

                            <td class="col-2">
                                @Html.DisplayFor(modelItem => item.Color_Product.Color_Name)
                            </td>

                            <td class="col-2">
                                <img src="~/Images/Color_Product_Avatar/@Html.DisplayFor(modelItem => item.Color_Product.Image)" />
                            </td>

                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>

                            <td class="col-1">
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td class="col-2">
                                @item.Price_Sale.ToString("n0")
                            </td>
                            
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="OrderDetails" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>