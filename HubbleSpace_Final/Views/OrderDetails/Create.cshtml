@model HubbleSpace_Final.Entities.OrderDetail

@{
    ViewData["Title"] = "Create OrderDetail";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="card card-body">
        <div class="card-header title--sbold">
            Thêm chi tiết đơn hàng
        </div>
        <div class="card-body card-block">
            <form asp-action="Create" method="post" class="form-horizontal">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="ID_Color_Product" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <select asp-for="ID_Color_Product" class="form-control" asp-items="ViewBag.ID_Color_Product"></select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Product" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Product" class="form-control" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Size" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Size" class="form-control" />
                        <select asp-for="Size" class="form-control" asp-items="ViewBag.Size"></select>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="UnitPrice" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="UnitPrice" class="form-control disabled" />
                        <span asp-validation-for="UnitPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="Quantity" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="Quantity" class="form-control" />
                        <span asp-validation-for="Quantity" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="TotalPrice" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="TotalPrice" class="form-control disabled" />
                        <span asp-validation-for="TotalPrice" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col col-md-3">
                        <label asp-for="ID_Order" class="control-label "></label>
                    </div>
                    <div class="col-12 col-md-9">
                        <input asp-for="ID_Order" class="form-control" />
                        <select asp-for="ID_Order" class="form-control" asp-items="ViewBag.ID_Order"></select>
                    </div>
                </div>

                <div class="form-group card-footer">
                    <input type="submit" value="Create" class="btn btn-primary col-2" />
                    <input type="reset" value="Reset" class="btn btn-danger col-2" />
                    <a asp-action="Index" class="btn btn-secondary col-2">Back</a>
                </div>
            </form>
        </div>
    </div>
</div>