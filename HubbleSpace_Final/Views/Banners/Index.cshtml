@model IEnumerable<HubbleSpace_Final.Entities.Banner>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminHeader";

}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Banner_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date_Upload)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Banner_Name)
            </td>
            <td>
                <img class="figure-img" src="~/Images/Banner/@Html.DisplayFor(modelItem => item.Photo)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date_Upload)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID_Banner">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID_Banner">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID_Banner">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
