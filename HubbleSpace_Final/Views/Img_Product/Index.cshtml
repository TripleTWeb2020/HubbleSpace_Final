@model IEnumerable<HubbleSpace_Final.Entities.Img_Product>

@{
    ViewData["Title"] = "Img_Product - Manage";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý hình ảnh sản phẩm</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form>
                    <div class="rs-select2--light rs-select2--sm">
                        <select class="js-select2" name="time">
                            <option selected="selected" value="today">Today</option>
                            <option value="week">This week</option>
                            <option value="month">This month</option>
                        </select>
                        <div class="dropDownSelect2"></div>
                    </div>
                    <button asp-action="Filter" class="au-btn-filter" type="submit">
                        <i class="zmdi zmdi-filter-list"></i>filters
                    </button>
                </form>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.color_Product.product.Product_Name)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.color_Product.Color_Name)
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.Photo)
                        </th>
                        <th class="col-3"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr class="tr-shadow row">
                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.color_Product.product.Product_Name)
                        </td>

                        <td class="col-3">
                            @Html.DisplayFor(modelItem => item.color_Product.Color_Name)
                        </td>

                        <td class="col-3">
                            <img class="img-circle" src="~/Images/Product_Color_Image/@Html.DisplayFor(modelItem => item.Photo)" />
                        </td>

                        <td class="col-3">
                            <div class="table-data-feature">
                                <a class="item" asp-action="Edit" asp-route-id="@item.ID_Color_Product" data-toggle="tooltip" data-placement="top" title="Edit">
                                    <i class="zmdi zmdi-edit"></i>
                                </a>
                                <a class="item" asp-action="Delete" asp-route-id="@item.ID_Color_Product" data-toggle="tooltip" data-placement="top" title="Delete">
                                    <i class="zmdi zmdi-delete"></i>
                                </a>
                                <a class="item" asp-action="Details" asp-route-id="@item.ID_Color_Product" data-toggle="tooltip" data-placement="top" title="More">
                                    <i class="zmdi zmdi-more"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>