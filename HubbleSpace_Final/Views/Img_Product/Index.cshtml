@model PagedList.Core.IPagedList<HubbleSpace_Final.Entities.Img_Product>

@{
    ViewData["Title"] = "Img_Product - Manage";
    Layout = "_AdminLayout";

}

<div class="row">
    <div class="col-md-12">
        <h3 class="title-5 m-b-35">Quản lý hình ảnh sản phẩm</h3>
        <div class="table-data__tool">
            <div class="table-data__tool-left">
                <form asp-action="Index" method="post">
                    <div class="rs-select2--light rs-select2--sm">
                        <input type="text" class="form-control" placeholder="Search for" name="SearchString" value="@ViewData["Search"]" />
                    </div>
                    <button class="au-btn-filter" type="submit">
                        <i class="fa fa-search"></i>
                    </button>
                </form>
            </div>
            <div class="table-data__tool-right">
                <a class="au-btn au-btn-icon au-btn--blue au-btn--small" asp-controller="Color_Product" asp-action="Index" asp-route-id="@ViewBag.ID_Product">
                    Back
                </a>
                <a class="au-btn au-btn-icon au-btn--green au-btn--small" asp-action="Create" asp-route-id="@ViewBag.ID_ColorProduct">
                    Add item
                </a>
            </div>
        </div>
        <!-- DATA TABLE -->
        <div class="table-responsive table-responsive-data2">
            <table class="table table-data2">
                <thead>
                    <tr class="row">
                        <th class="col-3">
                            <a asp-action="Index" asp-route-id="@ViewBag.ID_ColorProduct" asp-route-sortOrder="@ViewData["Name"]">@Html.DisplayNameFor(model => model.First().color_Product.product.Product_Name)</a>
                        </th>
                        <th class="col-3">
                            <a asp-action="Index" asp-route-id="@ViewBag.ID_ColorProduct" asp-route-sortOrder="@ViewData["ColorName"]">@Html.DisplayNameFor(model => model.First().color_Product.Color_Name)</a>
                        </th>
                        <th class="col-3">
                            @Html.DisplayNameFor(model => model.First().Photo)
                        </th>
                        <th class="col-3"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="tr-shadow row">
                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.color_Product.product.Product_Name)
                            </td>

                            <td class="col-3">
                                @Html.DisplayFor(modelItem => item.color_Product.Color_Name)
                            </td>

                            <td class="col-3">
                                <img class="img-circle" src="~/Images/Product_Color_Image/@Html.DisplayFor(modelItem => item.color_Product.product.Product_Name)/@Html.DisplayFor(modelItem => item.Photo)" />
                            </td>

                            <td class="col-3">
                                <div class="table-data-feature">
                                    <a class="item" asp-action="Edit" asp-route-id="@item.ID_Img_Product" data-toggle="tooltip" data-placement="top" title="Edit">
                                        <i class="zmdi zmdi-edit"></i>
                                    </a>
                                    <a class="item" asp-action="Delete" asp-route-id="@item.ID_Img_Product" data-toggle="tooltip" data-placement="top" title="Delete">
                                        <i class="zmdi zmdi-delete"></i>
                                    </a>
                                    <a class="item" asp-action="Details" asp-route-id="@item.ID_Img_Product" data-toggle="tooltip" data-placement="top" title="More">
                                        <i class="zmdi zmdi-more"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <tr class="spacer"></tr>
                    }
                </tbody>
            </table>
            <pager class="pager-container" list="@Model" asp-action="Index" asp-controller="Img_Product" />
        </div>
        <!-- END DATA TABLE -->
    </div>
</div>